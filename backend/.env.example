NODE_ENV=development
API_PORT=4000
# Preferred for Supabase projects (session pooler or direct connection string):
SUPABASE_DB_URL=
# Fallback for local/docker or non-Supabase Postgres:
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/production_line
# Optional DB tuning:
DB_SSL=
DB_SSL_REJECT_UNAUTHORIZED=false
DB_POOL_MAX=10
DB_IDLE_TIMEOUT_MS=30000
JWT_SECRET=change-me-in-staging-and-prod
JWT_EXPIRES_IN=12h
FRONTEND_ORIGIN=http://localhost:8080
