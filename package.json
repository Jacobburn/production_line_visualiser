{
  "name": "production-line-visualiser",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:css": "tailwindcss -i ./src/tailwind.css -o ./dist/tailwind.css --watch",
    "build:css": "tailwindcss -i ./src/tailwind.css -o ./dist/tailwind.css --minify",
    "backend:dev": "npm --prefix backend run dev",
    "backend:start": "npm --prefix backend run start",
    "backend:migrate": "npm --prefix backend run migrate",
    "backend:seed": "npm --prefix backend run seed"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.17",
    "postcss": "^8.4.47",
    "autoprefixer": "^10.4.20"
  }
}
